{
    "manifest_version": 3,
    "name": "Job Scanner Pro",
    "version": "3.0",
    "description": "Multi-platform job scanner with customizable time - LinkedIn, Internshala, Indeed, Naukri",
    "permissions": [
        "activeTab",
        "storage",
        "scripting",
        "downloads",
        "tabs",
        "notifications"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://internshala.com/*",
        "https://in.indeed.com/*",
        "https://www.indeed.com/*",
        "https://www.naukri.com/*",
        "http://localhost:*/*",
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Job Scanner Pro"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}